<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe2e2e2"
    android:orientation="vertical" >

    <include
        android:id="@id/head"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        layout="@layout/nav_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#ffe2e2e2" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:paddingBottom="10.0dip" >

            <include
                android:id="@id/cl_item_first"
                android:layout_height="wrap_content"
                layout="@layout/setting_first" />

            <include
                android:layout_height="wrap_content"
                layout="@layout/setting_second" />

            <include
                android:layout_height="wrap_content"
                layout="@layout/setting_third" />

            <include
                android:id="@id/ic_item_bottom"
                android:layout_height="wrap_content"
                layout="@layout/setting_bottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>